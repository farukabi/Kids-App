<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200"

    tools:context=".gunay">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:id="@+id/ay"
        android:text="MONTHS" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ay"

                android:text="1."
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btn1"
                android:layout_weight="1"
                android:layout_below="@id/ay"
                android:text="2."
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="66dp"
                android:layout_below="@id/ay"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btn2"
                android:text="3."
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="70dp"
                android:layout_below="@id/ay"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btn3"

                android:layout_weight="1"
                android:text="4."
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="70dp"
                android:layout_below="@id/ay"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btn4"
                android:layout_weight="1"

                android:text="5."
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_below="@id/ay"
                android:layout_width="67dp"
                android:layout_height="48dp"

                android:layout_toEndOf="@id/btn5"
                android:layout_weight="1"
                android:text="6."
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="66dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn1"


                android:text="7." />
            <Button
                android:id="@+id/btn8"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn2"
                android:textSize="20sp"
                android:layout_toEndOf="@id/btn7"
                android:text="8." />
            <Button
                android:id="@+id/btn9"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
             android:layout_below="@id/btn3"
                android:textSize="20sp"
                android:layout_toEndOf="@id/btn8"
                android:text="9." />
            <Button
                android:id="@+id/btn10"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn4"
                android:layout_toEndOf="@id/btn9"
                android:textSize="20sp"
                android:text="10." />

            <Button
                android:id="@+id/btn11"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn5"
                android:layout_toEndOf="@id/btn10"
                android:textSize="20sp"
                android:text="11." />

            <Button
                android:id="@+id/btn12"
                android:layout_width="70dp"
                android:layout_below="@id/btn6"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btn11"
                android:textSize="20sp"
                android:text="12." />












        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn10"

            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginLeft="130dp"
            android:text="@string/se_len_ay"/>



    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/txt"
        app:srcCompat="@drawable/img_6" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAYS"
       android:id="@+id/hft"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/imageView4"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"/>
    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hft"
        android:orientation="horizontal">

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:text="1."
        android:textSize="20sp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:text="2."
        android:textSize="20sp" />

    <Button
        android:id="@+id/button11"
        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:text="3."
        android:textSize="20sp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:text="4."
        android:textSize="20sp" />


    <Button
        android:id="@+id/button13"
        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:text="5."
        android:textSize="20sp" />

    <Button
        android:id="@+id/button14"
        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:text="6."
        android:textSize="20sp" />

    <Button
        android:id="@+id/button15"
        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:text="7."
        android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:layout_below="@+id/ln"
        android:layout_centerHorizontal="true"
        android:textColor="@color/yellow"

        android:layout_height="wrap_content"
        android:text="DAY" />


        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
    android:text="MAIN PAGE" />
    <TextView
        android:id="@+id/tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAINED EXPERIENCE:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/dnym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@id/tt"
        android:textSize="20sp"
        android:textColor="@color/red"
        android:textStyle="bold"/>
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="R"
        android:layout_alignParentRight="true"
        android:id="@+id/reset"/>
</RelativeLayout>